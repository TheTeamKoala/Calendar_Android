<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="addActivity"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">


    <Button
        android:id="@+id/bfecha"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="28dp"
        android:text="Tarih"
        app:layout_constraintBaseline_toBaselineOf="@+id/efecha"
        app:layout_constraintEnd_toStartOf="@+id/efecha"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bhora"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="28dp"
        android:text="Saat"
        app:layout_constraintBaseline_toBaselineOf="@+id/ehora"
        app:layout_constraintEnd_toStartOf="@+id/ehora"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/efecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="153dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bfecha"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ehora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="51dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bhora"
        app:layout_constraintTop_toBottomOf="@+id/efecha" />
</android.support.constraint.ConstraintLayout>